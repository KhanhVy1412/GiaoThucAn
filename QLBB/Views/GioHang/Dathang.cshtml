<div class="row">
    <div class="col-75">
        <div class="container" style="background-color: #f2f2f2;
  padding: 5px 20px 15px 20px;
  border: 1px solid lightgrey;
  border-radius: 3px;">
            <form @*action="/action_page.php"*@ action="#" method="post">
                <h4 style="text-align:center">Thông tin giao hàng</h4>
                <br />
                <div class="row">
                    <div class="col-50">

                        <label for="fname"><i class="fa fa-user"></i> Full Name :@kh.HoTen</label>
                        <label for="adr"><i class="fa fa-address-card-o"></i> Address :@kh.DiaChi</label>
                        <label for="adr"><i class="fa fa-envelope"></i> Address :@kh.Email</label>
                    </div>

                    <div class="col-50">
                        @*<h3>Payment</h3>*@

                        <label for="cname">Thời gian đặt hàng :@DateTime.Now.AddHours(0)</label>

                        <label for="ccnum">Thời gian giao hàng: @DateTime.Now.AddHours(1)</label>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>
                    </div>

                </div>
                @*<input type="checkbox" checked="checked" name="sameadr"> <label>
                      Địa chỉ giao hàng giống như thanh toán
                    </label>*@
                <input type="submit" value="Đặt hàng" class="btn">
            </form>
        </div>
    </div>

    <div class="col-25">
        <div class="container" style="background-color: #f2f2f2;
  padding: 5px 20px 15px 20px;
  border: 1px solid lightgrey;
  border-radius: 3px;">
            <h4 style="text-align:center">
                Cart
                @*<span class="price" style="color:black">
                        <i class="fa fa-shopping-cart"></i>
                        <b>4</b>
                    </span>*@
            </h4>
            @Html.ActionLink("TRỞ LẠI GIỎ HÀNG", "GioHang", "GioHang")
            @foreach (var item in Model)
            {
                <p><span class="name">@item.iSoLuong</span><span class="amount"> @item.sTenSP</span><span class="price"> @String.Format("{0:0,0}", item.dThanhTien)</span></p>
              <hr>

            }
            <span class="amount">Total</span><span class="name" style="color:black">@ViewBag.Tongsoluong </span><span class="price" style="color:black"><b>@String.Format("{0:0,0}", ViewBag.Tongtien)</b></span></p>
</div>
    </div>
</div>